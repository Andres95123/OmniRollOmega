{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "name": "CrunchyRoll Omni-Roll Ω",
  "version": "4.1.1",
  "description": "✨ Omni-Roll is the ultimate tool to customize your Crunchyroll experience. Discover new ways to enjoy your favorite anime!",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation",
    "storage",
    "{{firefox}}.*://*.crunchyroll.com/*",
    "{{firefox}}.*://*.koyeb.app/*",
    "{{firefox}}.*://*.anilist.co/*"
  ],
  "{{chrome}}.host_permissions": [
    "*://*.crunchyroll.com/*",
    "*://*.koyeb.app/*",
    "*://*.anilist.co/*"
  ],
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "{{chrome}}.action": {
    "default_popup": "src/popup.html"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{firefox}}.scripts": ["src/background.ts"],
    "{{firefox}}.persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://*.crunchyroll.com/*"],
      "js": ["src/content.ts"],
      "run_at": "document_start"
    }
  ]
}
